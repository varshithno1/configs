{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 3,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
          {
              "type": "path",
              "style": "powerline",
              "powerline_symbol": "",
              "foreground": "#ffffff",
              "background": "#1976d2",
              "template": "    {{ .Path }}  "
          }
      ]
    }
  ]
}